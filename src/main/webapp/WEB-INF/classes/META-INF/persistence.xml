<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
        <persistence-unit name="users" transaction-type="RESOURCE_LOCAL">
            <provider>
                org.hibernate.ejb.HibernatePersistence
            </provider>
            <class>org.geymer.users.entity.User</class>
            <class>org.geymer.users.entity.UserGroup</class>
            <properties>
                <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
                <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
                <property name="hibernate.connection.url" value="jdbc:mysql://mysql-babkamen.jelastic.neohost.net/vstup"/>
                <property name="hibernate.connection.username" value="website"/>
                <property name="hibernate.connection.password" value=""/>
            </properties>
        </persistence-unit>
    </persistence>
